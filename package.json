{
	"name": "@side-quest/observability",
	"version": "0.0.0",
	"description": "Observability event server for Side Quest plugins",
	"author": {
		"name": "nathanvale",
		"url": "https://github.com/nathanvale"
	},
	"license": "MIT",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"bun": ">=1.3.7"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nathanvale/side-quest-observability.git"
	},
	"bugs": {
		"url": "https://github.com/nathanvale/side-quest-observability/issues"
	},
	"homepage": "https://github.com/nathanvale/side-quest-observability#readme",
	"keywords": [
		"typescript",
		"bun",
		"observability",
		"side-quest"
	],
	"scripts": {
		"build": "bun run --cwd packages/client build && bun run --cwd packages/server build",
		"check": "biome check --write .",
		"clean": "rimraf packages/*/dist 2>/dev/null || true",
		"coverage": "bun test --coverage --recursive",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:scripts": "shellcheck .github/scripts/*.sh",
		"lint:workflows": "actionlint -color -verbose",
		"pre:enter:beta": "changeset pre enter beta",
		"pre:enter:next": "changeset pre enter next",
		"pre:enter:rc": "changeset pre enter rc",
		"pre:exit": "changeset pre exit",
		"prepare": "husky",
		"quality-check:ci": "biome check . && bun run typecheck",
		"release": "changeset publish --provenance",
		"security:audit": "npm audit",
		"setup": "bun scripts/setup.ts",
		"setup:protect": "bun scripts/setup-protect.ts",
		"test": "bun test --recursive",
		"test:ci": "TF_BUILD=true bun test --recursive",
		"test:coverage": "bun test --coverage --recursive",
		"test:watch": "bun test --watch",
		"typecheck": "tsc --build",
		"validate": "bun run lint && bun run typecheck && bun run build && TF_BUILD=true bun run test",
		"version:gen": "bun run scripts/version-gen.ts",
		"version:pre": "changeset version",
		"watch:types": "tsc --build --watch"
	},
	"dependencies": {
		"@side-quest/core": "^0.4.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/node": "^24.8.1",
		"bun-types": "^1.3.3",
		"bunup": "^0.16.10",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,mts,cts,json}": [
			"biome check --write"
		]
	}
}
